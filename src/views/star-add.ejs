    <!-- Start Main content -->
    <main>
        <section class="pt-30 pb-65">
            <div class="container">
                <h3 class="font-heading mb-50">Who is your favorite movie star?</h3>
                <div class="row">
                    <div class="col-md-8">
                        <form class="form-contact comment_form" method="POST" action="/star-add" enctype="multipart/form-data">
                            <div class="row">
                                <div class="col-12">
                                    <div class="form-group">
                                        <input class="form-control" name="fullName" type="text" placeholder="Actor/Actress Name:">
                                    </div>
                                </div>

                                <div class="col-12">
                                    <div class="form-group">
                                        <textarea class="form-control w-100" name="description" cols="30" rows="9" placeholder="My favorite movie star is..."></textarea>
                                    </div>
                                </div>
                            
                               <div class="col-12 ">
                                    <div class="form-group">
                                         <input class="btn-search"  name="image" type="file"  >
                                     </div>
                                </div> 
                                 </div>
                            
                           
                            <div class="form-group">
                                <div class="checkbox">
                                    <div class="custom-checkbox">
                                        <input class="form-check-input" type="checkbox" name="private">
                                        <label class="form-check-label label_info fw-700 text-grey-100 font-md"><span>Publish Private</label>
                                    </div>
                                </div>
                            

                            </div>

                            <div class="form-group">
                                <button  class="btn btn-lg bg-brand-1 text-grey-700  " type="submit">Submit</button>
                            </div>
                            
                           
                        </form>
                    </div>
                   
                </div>
            </div>
        </section>


       
    </main>
    <!-- End Main content -->
